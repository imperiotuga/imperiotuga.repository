<addons>
<addon id="imperiotuga.repository" name="Imperio Tuga" version="2.0" provider-name="imperiotuga">
	<extension point="xbmc.addon.repository" name="imperiotuga Add-on Repository">
		<info compressed="false">http://raw.github.com/imperiotuga/imperiotuga.repository/master/addons.xml</info>
		<checksum>http://raw.github.com/imperiotuga/imperiotuga.repository/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/imperiotuga/imperiotuga.repository/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Imperio Tuga Addon</summary>
		<description>Addon Description</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

